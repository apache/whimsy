source 'https://rubygems.org'

ldapversion =
begin
  File.read(File.expand_path('../../asfldap.version', __FILE__)).strip
rescue Exception => e
  nil
end

# lib needs these at run-time
gem 'json'
gem 'nokogiri'
gem 'rake'
gem 'ruby-ldap3', ldapversion # Forked version supports ruby 3.x
gem 'wunderbar'
gem 'pdf-reader'

# For Travis testing
group :test do
  gem 'rspec'
end
