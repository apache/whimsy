source 'https://rubygems.org'

root = '../../../..'
version_file = File.expand_path("#{root}/asf.version", __FILE__)
if File.exist? version_file
  # for deployment and local testing
  asf_version = File.read(version_file).chomp
  gem 'whimsy-asf', asf_version, path: File.expand_path(root, __FILE__)
else
  # for docker purposes (atleast for now)
  gem 'whimsy-asf'
end

gem 'rake'
gem 'wunderbar'
gem 'ruby2js'
gem 'sinatra', '~> 2.0'
gem 'nokogumbo'
gem 'execjs'
gem 'listen'
gem 'activesupport'
gem 'mail'
gem 'erubis'
gem 'mustache'

gem 'websocket-eventmachine-server'
gem 'websocket-eventmachine-client'
gem 'concurrent-ruby'

gem 'rubyXL'

gem 'chronic'

group :test do
  gem 'rspec'
  gem 'puma'
  gem 'capybara'
  gem 'selenium-webdriver'
end

group :development do
  gem 'passenger'
end
